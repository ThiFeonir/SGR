<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Categoria:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnCategoria"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:text="Produto:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnCategoria" />

    <Spinner
        android:id="@+id/spnProduto"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label2" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Quantidade:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnProduto" />

    <EditText
        android:id="@+id/txtQuantidade"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#888"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintLeft_toRightOf="@+id/btMenos"
        app:layout_constraintRight_toLeftOf="@+id/btMais"
        app:layout_constraintTop_toBottomOf="@+id/label3"
        tools:text="1" />

    <ImageButton
        android:id="@+id/btMais"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@color/appcolor"
        app:srcCompat="@mipmap/arrow_right"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/spnProduto"
        android:layout_marginRight="170dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btMenos"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@color/appcolor"
        app:srcCompat="@mipmap/arrow_left"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/label3" />

    <Button
        android:id="@+id/btAdicionar"
        android:layout_width="114dp"
        android:layout_height="53dp"
        android:layout_marginBottom="39dp"
        android:layout_marginRight="40dp"
        android:background="@color/appcolor"
        android:text="Adicionar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
